<%= form_with(model: @treatment, local: true) do |f| %>
  <% if @treatment.errors.any? %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <div id="error_explanation">
        <h2>Verifique os erros e tente novamente:</h2>

        <ul>
          <% @treatment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :user_id, "Paciente"  %>
      <%= f.collection_select(:user_id, User.where(kind: :patient), :id, :name, { include_blank: 'Selecione um paciente' }, class: "form-control") %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :appointment_id, "Cosulta" %>
      <%= f.collection_select(:appointment_id, Appointment.all, :id, :full_description, { include_blank: 'Selecione uma consulta' }, class: "form-control") %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :place %>
      <%= f.text_field :place, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :date %>
      <%= f.datetime_field :date, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :kind %>
      <%= f.select(:kind, Treatment.kinds.keys.map { |kind| [kind.titleize, kind] }, {}, class: "form-control" ) %>
    </div>
  </div>

  <div class="row">
    <div class="field col-12 col-md-4 mt-3">
      <%= f.label :document, "Documento" %>
      <%= f.file_field :document, multiple: false %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mt-5">
      <div class="actions btn-group">
        <%= link_to treatments_path, :class => "btn btn-outline-secondary text-uppercase" do %>
          <%= icon('fas', 'arrow-circle-left', 'Voltar', class: 'strong') %>
        <% end %>
        <%= f.button icon('fas', 'save', 'salvar', class: 'strong'), class: "btn btn-success text-uppercase" %>
      </div>
    </div>
  </div>
<% end %>
